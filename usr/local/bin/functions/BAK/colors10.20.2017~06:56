function colors()

{
local blue=`echo -e "\e[0;34m"`
BLUE="$blue"
local purple=`echo -e "\e[0;35m"`
PURPLE="$purple"
local cyan=`echo -e "\e[0;36m"`
CYAN="$cyan"
local light_grey=`echo -e "\e[0;37m"`
LIGHT_GREY="$light_grey"
local dark_grey=`echo -e "\e[1;30m"`
DARK_GREY="$dark_grey"
local light_red=`echo -e "\e[1;31m"`
LIGHT_RED="$light_red"
local light_green=`echo -e "\e[1;32m"`
LIGHT_GREEN="$light_green"
local yellow=`echo -e "\e[1;33m"`
YELLOW="$yellow"
local light_blue=`echo -e "\e[1;34m"`
LIGHT_BLUE="$light_blue"
local light_purple=`echo -e "\e[1;35m"`
LIGHT_PURPLE="$light_purple"
local light_cyan=`echo -e "\e[1;36m"`
LIGHT_CYAN="$light_cyan"
local light_white=`echo -e "\e[1;37m"`
LIGHT_WHITE="$light_white"
local reset=`echo -e "\e[0m"`
RESET="$reset"
}
colors

#Testing colors
#echo "${LIGHT_WHITE} Hello World"
#echo "${RESET} RESET"
