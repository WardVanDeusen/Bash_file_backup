function addFile()
{

        echo ""
	echo "${YELLOW}"
        echo which file would you like to backup?
	echo "${RESET}"
	echo "${LIGHT_WHITE}"
	echo "===================================" 
	echo "${RESET}"
	echo "${BLUE}"
	eval find . -maxdepth 1 -type f | cut -c 3- | grep ":*" | sort
	echo "${RESET}"
	echo "${LIGHT_WHITE}"
	echo "===================================" 
	echo "${RESET}"

        echo ""          

		read -r file
clear
NAMEFILE=$file

}
addFile


